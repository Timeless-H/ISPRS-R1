ARG IMAGE_NAME
FROM ${IMAGE_NAME}:11.6.0-base-ubuntu20.04

# Remove any third-party apt sources to avoid issues with expiring keys.
RUN rm -f /etc/apt/sources.list.d/*.list

# Install some basic utilities
RUN apt-get update && apt-get install -y \
    curl \
    ca-certificates \
    build-essential \
    vim \
    wget \
    sudo \
    git \
    bzip2 \
    libx11-6 \
 && rm -rf /var/lib/apt/lists/*

RUN wget -P /usr/bin https://github.com/unlimblue/KNN_CUDA/raw/master/ninja

# Create a working directory
RUN mkdir /app
WORKDIR /app
COPY . /app

# Create a non-root user and switch to it
RUN adduser --disabled-password --gecos '' --shell /bin/bash user \
 && chown -R user:user /app
RUN echo "user ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/90-user
USER user

# All users can use /home/user as their home directory
ENV HOME=/home/user
RUN chmod 777 /home/user

# Install Miniconda and Python 3.8
ENV CONDA_AUTO_UPDATE_CONDA=false
ENV PATH=/home/user/miniconda/bin:$PATH
RUN curl -sLo ~/miniconda.sh https://repo.continuum.io/miniconda/Miniconda3-py38_4.8.3-Linux-x86_64.sh \
 && chmod +x ~/miniconda.sh \
 && ~/miniconda.sh -b -p ~/miniconda \
 && rm ~/miniconda.sh \
 && conda install -y python==3.8.3 \
#  && conda update -n miniconda -c defaults conda \
 && conda clean -ya

# CUDA 11.0-specific steps
RUN conda install -c conda-forge \
    cudatoolkit=11.6.0 \
&& conda clean -ya

RUN conda install -y -c pytorch \
    "pytorch=1.12.1=py3.8_cuda11.6_cudnn8.3.2_0" \ 
    "torchvision=0.13.1=py38_cu116" \
    tensorboard \
&& conda clean -ya

RUN conda install -c conda-forge \
    scipy \
    scikit-learn \
    matplotlib \
    plyfile \
    einops \
    h5py \
    pandas \
    seaborn \
    pickleshare \
 && conda clean -ya

RUN PIP_INSTALL="/home/user/miniconda/bin/pip install" && \
    $PIP_INSTALL \
        memcnn \
        https://github.com/unlimblue/KNN_CUDA/releases/download/0.2/KNN_CUDA-0.2-py3-none-any.whl

# RUN conda env update -f requirements.yaml

# RUN GIT_CLONE="git clone --recurse-submodules" && \
#     $GIT_CLONE \
#         https://github.com/unlimblue/KNN_CUDA.git && \
#     cd KNN_CUDA && make && make install && cd && \
# RUN wget -P /home/user/miniconda/bin https://github.com/unlimblue/KNN_CUDA/raw/master/ninja

# Set the default command to python3
CMD ["python3", "main.py"]
